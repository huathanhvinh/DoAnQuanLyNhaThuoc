<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AD_SuaDoiQuyDinhNhaThuoc"
    android:orientation="vertical"
    android:background="#D9E6EC"
    android:padding="5dp"
    android:weightSum="10">
    <TextView
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:text="Quy Định Nhà Thuốc"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </TextView>
    <LinearLayout
        android:weightSum="5"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <TextView
                android:text="Điều 1"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:padding="3dp"
                android:id="@+id/edQuyDinh1"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <TextView
                android:text="Điều 2"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:padding="3dp"
                android:id="@+id/edQuyDinh2"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <TextView
                android:text="Điều 3"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:padding="3dp"
                android:id="@+id/edQuyDinh3"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <TextView
                android:text="Điều 4"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:padding="3dp"
                android:id="@+id/edQuyDinh4"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <TextView
                android:text="Điều 5"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:padding="3dp"
                android:id="@+id/edQuyDinh5"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            </EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btnLuu"
            android:textSize="25dp"
            android:backgroundTint="#2196F3"
            android:text="Lưu"
            android:layout_width="120dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:layout_marginLeft="70dp"
            android:id="@+id/btnTrove"
            android:textSize="25dp"
            android:backgroundTint="#2196F3"
            android:text="Trở Về"
            android:layout_width="120dp"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

</LinearLayout>