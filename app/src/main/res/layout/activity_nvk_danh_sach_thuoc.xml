<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NVK_DanhSachThuoc"
    android:padding="5dp"
    android:weightSum="10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imTrove"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            android:layout_width="80dp"
            android:layout_height="60dp">

        </ImageButton>
        <TextView
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:text="Danh Sách Thuốc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:background="#D9E6EC"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imRefreshThuoc"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_refresh"
            android:layout_width="0dp"
            android:layout_height="50dp">

        </ImageButton>
        <EditText
            android:id="@+id/edTimKiemThuoc"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="#fff"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Tìm thuốc..."
            android:layout_width="0dp"
            android:layout_height="50dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ListView
            android:id="@+id/lvDanhSachThuoc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageView
            android:background="#fff"
            android:src="@drawable/ic_medical"
            android:layout_width="90dp"
            android:layout_height="match_parent">
        </ImageView>
        <TextView
            android:id="@+id/tvThemThuocMoi"
            android:text="Thêm thuốc mới"
            android:textSize="20dp"
            android:textColor="#2196F3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

</LinearLayout>