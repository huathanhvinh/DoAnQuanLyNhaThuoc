<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NVK_ThemThuoc"
    android:weightSum="10"
    android:orientation="vertical">
    <LinearLayout
        android:background="#D9E6EC"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            android:layout_width="80dp"
            android:layout_height="60dp">

        </ImageButton>
        <TextView
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical"
            android:textSize="30dp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:text="Thêm Thuốc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#D9E6EC"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="vertical">
        <LinearLayout
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_weight="1"
                android:text="Mã Thuốc: "
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:paddingLeft="5dp"
                android:background="#fff"
                android:hint="Mã thuốc..."
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_weight="1"
                android:text="Tên Thuốc: "
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:paddingLeft="5dp"
                android:background="#fff"
                android:hint="Tên thuốc..."
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_weight="1"
                android:text="Giá bán: "
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:paddingLeft="5dp"
                android:inputType="number"
                android:background="#fff"
                android:hint="giá bán..."
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_weight="1"
                android:text="Hạn sử dụng: "
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:paddingLeft="5dp"
                android:inputType="number"
                android:background="#fff"
                android:hint="hạng dùng (tính theo tháng).."
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_weight="1"
                android:text="Đơn vị tính: "
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <Spinner
                android:entries="@array/DonViTinh"
                android:background="#fff"
                android:hint="giá bán..."
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="5"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_weight="1"
                android:text="Thông Tin Thuốc: "
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:gravity="top"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:background="#fff"
                android:hint="hạng dùng (tính theo tháng).."
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </EditText>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="#D9E6EC"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:backgroundTint="#2196F3"
            android:layout_gravity="center"
            android:text="Thêm Thuốc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

</LinearLayout>