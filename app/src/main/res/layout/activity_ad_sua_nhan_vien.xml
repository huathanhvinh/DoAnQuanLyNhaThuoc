<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AD_SuaNhanVien"
    android:orientation="vertical"
    android:weightSum="10"
    >
    <LinearLayout
        android:background="#D9E6EC"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            android:layout_width="80dp"
            android:layout_height="60dp">

        </ImageButton>
        <TextView
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:text="Thông Tin Nhân Viên"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:textSize="25dp"
            android:backgroundTint="#2196F3"
            android:text="Lưu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:background="#D9E6EC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Mã Nhân Viên:"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="25dp"
            android:textColor="#000"
            android:text="NVBH100001"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:background="#D9E6EC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Họ tên:"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <EditText
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:background="#fff"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="25dp"
            android:textColor="#000"
            android:text="Huy ngungok"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:background="#D9E6EC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Số điện thoại:"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <EditText
            android:padding="10dp"
            android:background="#fff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="25dp"
            android:textColor="#000"
            android:text="0933123001"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:background="#D9E6EC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Năm sinh:"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_weight="2"
            android:weightSum="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:padding="5dp"
                android:background="#fff"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:textSize="25dp"
                android:textColor="#000"
                android:text="01/01/2000"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:padding="5dp"
                android:background="#fff"
                android:gravity="center"
                android:src="@drawable/ic_calendar"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#D9E6EC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Loại nhân viên:"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <Spinner
            android:entries="@array/chucVu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="center_vertical"
            android:hint="Nhập mật khẩu hiện tại..."
            android:inputType="textPassword"
            android:textColor="#2196F3"
            android:textSize="25dp"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:background="#D9E6EC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Tài khoản:"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="25dp"
            android:textColor="#000"
            android:text="nvbh100001"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:background="#D9E6EC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_gravity="top
"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="Địa chỉ:"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:gravity="top"
                android:textSize="20dp"
                android:textColor="#000"
                android:text="Q9, Hồ Chí Minh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </EditText>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>