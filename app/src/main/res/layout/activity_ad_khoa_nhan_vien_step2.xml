<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".AD_KhoaNhanVienStep2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back">

        </ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Khóa Nhân Viên"
            android:textColor="#2196F3"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:background="#D9E6EC"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:textSize="20dp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:text="Tài Khoản:"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:textSize="30dp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:text="NVK100001"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:textSize="20dp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:text="Số điện thoại:"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:textSize="30dp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:text="0933123101"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:text="Lý Do Khóa"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <RadioGroup
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="5"
        android:background="#D9E6EC"
        android:orientation="vertical"
        android:weightSum="7">
        <RadioButton
            android:text="Vi phạm đều 1"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </RadioButton>
        <RadioButton
            android:layout_weight="1"
            android:text="Vi phạm đều 2"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </RadioButton>
        <RadioButton
            android:layout_weight="1"
            android:text="Vi phạm đều 3"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </RadioButton>
        <RadioButton
            android:layout_weight="1"
            android:text="Vi phạm đều 4"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </RadioButton>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Lý Do Khác"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </TextView>
        <EditText
            android:layout_weight="2"
            android:gravity="top"
            android:hint="Nhập lí do"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </EditText>

    </RadioGroup>
    <LinearLayout
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:textSize="25dp"
            android:backgroundTint="#2196F3"
            android:text="Khóa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

</LinearLayout>