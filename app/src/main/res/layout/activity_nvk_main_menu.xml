<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NVK_MainMenu"
    android:padding="5dp"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:weightSum="4"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <TextView
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:text="NVK Main Menu"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </TextView>
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/tvTaiKhoan"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="20dp"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:text="Xin chào: abc0933123001"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </TextView>
    </LinearLayout>
    <ScrollView
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnLapPhieuNhapThuoc"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button_nvk"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="1. Lập Phiếu Nhập Thuốc"
                android:textColor="#000"
                android:textSize="18dp"></Button>
            <Button
                android:id="@+id/btnTraCuuKho"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button_nvk"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="2. Tra Cứu Kho"
                android:textColor="#000"
                android:textSize="18dp"></Button>
            <Button
                android:id="@+id/btnTraCuuPhieuNhapThuoc"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button_nvk"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="3. Tra cứu phiếu nhập thuốc"
                android:textColor="#000"
                android:textSize="18dp"></Button>
            <Button
                android:id="@+id/btnXemDanhSachThuoc"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button_nvk"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="#000"
                android:text="4. Xem danh sách thuốc">
            </Button>
            <Button
                android:id="@+id/btnXemDanhSachPhieuNhapThuoc"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button_nvk"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="#000"
                android:text="5. xem danh sách phiếu nhập thuốc">
            </Button>
            <Button
                android:id="@+id/btnDoiMatKhau"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button_nvk"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="#000"
                android:text="6. Đổi mật khẩu">
            </Button>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btnDangXuat"
            android:textSize="25dp"
            android:backgroundTint="#FF9800"
            android:text="Đăng Xuất"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

</LinearLayout>