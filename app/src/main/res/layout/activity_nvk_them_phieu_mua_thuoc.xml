<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NVK_ThemPhieuMuaThuoc"
    android:weightSum="10"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imTrove"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            android:layout_width="80dp"
            android:layout_height="60dp">

        </ImageButton>

        <TextView
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:text="Thêm Phiếu Mua Thuốc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
    </LinearLayout>

    <ScrollView
        android:background="#D9E6EC"
        android:padding="5dp"
        android:layout_weight="4.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:text="Mã phiếu mua: "
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/tvMaPhieuMuaThuoc"
                    android:text="MT01"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:text="Ngày lập: "
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/tvNgayPhieuMuaThuoc"
                    android:text="01/01/2021"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageButton
                    android:id="@+id/imLich"
                    android:background="#fff"
                    android:src="@drawable/ic_calendar"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:id="@+id/edTimTenThuoc"
                    android:drawableLeft="@drawable/ic_search"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:hint="Tìm tên thuốc..."
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:text="Tên thuốc:"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <Spinner
                    android:id="@+id/spDanhSachThuoc"
                    android:drawableLeft="@drawable/ic_search"
                    android:background="#fff"
                    android:hint="Tìm tên thuốc..."
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:text="Mã thuốc:"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/tvMaThuoc"
                    android:text="Mã thuốc"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:text="Đơn vị tính:"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/tvDonViTinh"
                    android:text="Đơn vị tính"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:text="Số lượng:"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:inputType="number"
                    android:id="@+id/edSoluongThuoc"
                    android:gravity="center"
                    android:background="#fff"
                    android:text="1"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </EditText>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/imThem1"
                        android:src="@drawable/ic_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/imTru1"
                        android:src="@drawable/ic_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageButton>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:text="Thành tiền:"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/tvThanhTien"
                    android:text="900,000,000"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <Button
                    android:id="@+id/btnThem"
                    android:backgroundTint="#2196F3"
                    android:text="Thêm"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="#D9E6EC"
        android:weightSum="3"
        android:layout_weight="3.3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <TextView
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Danh Sách Thuốc Nhập"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:weightSum="5"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="Tên thuốc"
                android:textColor="#000"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:gravity="center"
                android:text="DVT"
                android:textColor="#000"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:gravity="center"
                android:text="SL"
                android:textColor="#000"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:text="Thành Tiền"
                android:textColor="#000"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <ListView
            tools:listitem="@layout/item_mua_ban_thuoc"
            android:layout_weight="2.4"
            android:id="@+id/dsThuocDaMua"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </ListView>
    </LinearLayout>
<LinearLayout
    android:gravity="right"
    android:layout_weight="0.5"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvTongTien1"
        android:text="0"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </TextView>
    <TextView
        android:id="@+id/tvTongTien11"
        android:gravity="center"
        android:text="0"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </TextView>
    <TextView
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="VNĐ"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </TextView>

</LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThemPhieuMua"
            android:backgroundTint="#2196F3"
            android:layout_gravity="center"
            android:text="Thêm Phiếu Mua"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></Button>
    </LinearLayout>

</LinearLayout>